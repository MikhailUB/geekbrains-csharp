@model WebStore.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
	<meta name="viewport" content="width=device-width" charset="UTF-8">
	<title>Страница сотрудника @Model.SurName</title>
</head>
<body>
	<a asp-controller="Employes" asp-action="Index">К списку сотрудников</a>
	<hr />
	<h3>Карточка сотрудника</h3>
	<hr />
	<div>
		<p><b>Id:</b> @Model.Id</p>
	</div>
	<div>
		<p><b>Фамилия:</b> @Model.SurName</p>
	</div>
	<div>
		<p><b>Имя:</b> @Model.Name</p>
	</div>
	<div>
		<p><b>Отчество:</b> @Model.Patronymic</p>
	</div>
	<div>
		<p><b>Возраст:</b> @Model.Age</p>
	</div>
	<div>
		<p><b>Дата принятия:</b> @Model.StartWork.ToShortDateString()</p>
	</div>
</body>
</html>
