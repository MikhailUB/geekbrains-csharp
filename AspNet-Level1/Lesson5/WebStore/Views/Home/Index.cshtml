@{
	ViewBag.Title = "Главная страница интернет-магазина";
	Layout = "_LayoutBase";
}

@await Html.PartialAsync("Partial/_Slider")

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				@await Html.PartialAsync("Partial/_LeftSideBar")
			</div>

			<div class="col-sm-9 padding-right">
				@await Html.PartialAsync("Partial/_FeaturesItems", new WebStore.ViewModels.ProductViewModel[0])

				@await Html.PartialAsync("Partial/_CategoryTab")

				@await Html.PartialAsync("Partial/_RecommendedItems")
			</div>
		</div>
	</div>
</section>

@section Scripts
{
	<script>
		$("section").click(function () {
